<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_newproject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/back_wine"
        android:text="새 프로젝트 만들기"
        android:textColor="@color/whiteColor"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/layout_projectlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_newproject"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <include
            android:id="@+id/activity_project_list_progress"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/activity_project_list_progress" />

        <include
            android:id="@+id/activity_project_list_complete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/activity_project_list_complete" />
    </LinearLayout>

</RelativeLayout>